{
  "name": "@poppinss/fancy-logs",
  "version": "0.0.0",
  "description": "Printing fancy logs to the terminal",
  "main": "build/index.js",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node japaFile.js",
    "lint": "tslint --project tsconfig.json",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && typedoc --theme markdown --excludePrivate --hideSources && git add docs",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build"
  },
  "author": "virk,poppinss",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/mrm-preset": "^2.1.0",
    "@types/node": "^12.7.12",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "del-cli": "^3.0.0",
    "doctoc": "^1.4.0",
    "husky": "^3.0.8",
    "japa": "^3.0.1",
    "mrm": "^1.2.2",
    "np": "^5.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.15.0",
    "typedoc-plugin-external-module-name": "^2.1.0",
    "typedoc-plugin-markdown": "^2.2.10",
    "typescript": "^3.6.3"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
      "commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validateCommit/conventional/validate.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@poppinss/colors": "^1.0.1",
    "figures": "^3.0.0",
    "signale": "^1.4.0",
    "string-width": "^4.1.0"
  },
  "directories": {
    "doc": "docs",
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/fancy-logs.git"
  },
  "keywords": [
    "logger",
    "fancy-logs"
  ],
  "bugs": {
    "url": "https://github.com/poppinss/fancy-logs/issues"
  },
  "homepage": "https://github.com/poppinss/fancy-logs#readme",
  "np": {
    "contents": ".",
    "anyBranch": false
  }
}
